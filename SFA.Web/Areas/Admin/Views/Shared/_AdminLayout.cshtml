@using SFA.Web.Common
@using SFA.Web.Areas.Admin.Controllers
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - @WebContext.Current.ApplicationOption.Name
    </title>
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
</head>
<body>
    <div id="page">
        <div id="header">
            <div id="title" style="float: left;">
                <h1>
                    @WebContext.Current.ApplicationOption.Name
                </h1>
            </div>
            <div id="logindisplay" style="float: right;">
                @Html.Partial("UserSignInPartial")
                |
                @Html.Partial("LanguageMenuPartial")
            </div>
            <div class="clear">
                @{Html.RenderAction(HeaderController.MenuAction, HeaderController.ControllerName);}
            </div>
        </div>
        <div id="main">
            @if (TempData["message"] != null)
            {
                <div class="Message">@TempData["message"]</div>
            }
            @RenderBody()
        </div>
    </div>
</body>
</html>
