@using SFA.Web.Common
@using SFA.Web.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - @WebContext.Current.ApplicationOption.Name
    </title>
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
</head>
<body>
    <div id="page">
        <div id="header">
            <div id="title">
                <h1>
                    @WebContext.Current.ApplicationOption.Name
                </h1>
            </div>
            <div id="logindisplay">
                <div>
                    @Html.Partial("UserSignInPartial")
                    |
                    @Html.Partial("LanguageMenuPartial")
                </div>
                @if (WebContext.Current.ApplicationOption.IsShoppingSupported)
                { 
                    <div id="cartSummary" style="margin-top: 8px;">
                        @Html.Action(CartController.SummaryAction, CartController.ControllerName)
                    </div>
                }
            </div>
            <div class="clear">
                @{Html.RenderAction(HeaderController.MenuAction, HeaderController.ControllerName);}
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
            @Html.ActionLink(@Html.Localize("Layout_Home", "Home"), HomeController.HomeAction, HomeController.ControllerName)
            |
            @Html.ActionLink("About Us", HomeController.AboutAction, HomeController.ControllerName)
            |
            @Html.ActionLink("Contact Us", HomeController.ContactUsAction, HomeController.ControllerName)
            @*            <p>
                Powered by New Concept Apps Inc. <a href="http://www.newconceptapps.com" style="font-size: 1.1em;">
                    http://www.newconceptapps.com</a>
            </p>
            http://studystays.com/
*@
        </div>
    </div>
</body>
</html>
